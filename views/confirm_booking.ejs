<script>
            function validateForm()
            {
                var input = document.getElementById("amount").value;
                var n = <%=n%>; // Replace with your desired value

                if (parseInt(input) === n)
                {
                    return true; // Submit the form
                }
                else
                {
                    document.getElementById("errorMessage").style.display = "inline"; // Show error message
                    return false; // Prevent form submission
                }
            }
</script>
